(library
 (name albatross_stats)
 (public_name albatross.stats)
 (libraries albatross albatross.unix)
 (wrapped false)
 (foreign_stubs
  (language c)
  (names albatross_stats_stubs)
  (flags
   (:standard)
   (:include c_flags.sexp)))
 (c_library_flags
  (:include c_library_flags.sexp))
 (modules albatross_stats_pure))

(executable
 (name albatross_stats)
 (public_name albatross-stats)
 (package albatross)
 (modules albatross_stats)
 (libraries albatross.cli albatross.stats albatross albatrossd_utils))

(rule
 (targets c_flags.sexp c_library_flags.sexp)
 (action
  (run ./config/discover.exe)))
